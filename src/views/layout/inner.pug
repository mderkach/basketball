include ../utils/mixins
block variables

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title #{title}
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
    meta(name="description", content=description)
    block head

  body(class=pageClass, style='background-image: url(./assets/img/bg-inner.jpg)')
    block header
      include ../modules/header/headerInner
    block content
    block footer
      include ../modules/footer/footer
    block script
