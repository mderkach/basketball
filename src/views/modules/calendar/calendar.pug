        button.calendar__heading-controls-prev
          +icon('', 'tabp')
        p.calendar__heading-info 23 июля - 31 августа 2020 г.
        button.calendar__heading-controls-next
          +icon('', 'tabn')
    .calendar-grid
      +cardCalendar('', 'Воскресенье', 26, [
        {
          time: '12:20',
          name: 'Иванов Иван'
        },
        {
          time: '12:20',
          name: 'И И'
        }
      ])
      +cardCalendar('Август', 'Понедельник', 1)
