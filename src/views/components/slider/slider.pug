mixin slider(classname, wrapper, container)
  - classname = false || classname
  - wrapper = false || wrapper
  - container = false || container
  .slider-outer(class=container)
    .slider-container(class=classname)
      .slider-wrapper(class=wrapper)
        if block
          block
    .slider-navigation
      button.slider-prev
        +icon('slider-icon_prev', 'tabp')
      button.slider-next
        +icon('slider-icon_next', 'tabn')
